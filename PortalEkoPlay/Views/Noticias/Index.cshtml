@model IEnumerable<PortalEkoPlay.Infra.Entities.Noticia>

@{
    ViewData["Title"] = "Noticias";
}
<div class="d-flex justify-content-between align-items-center w-100">
    <h2>Noticias</h2>
    <a class="btn btn-primary" asp-action="CreateView">Criar nova noticia</a>
</div>

@if (Model.Any())
{
    <div class="table-responsive">

        <table class="table">
            <thead>
            <tr>
                <th scope="col">Titulo</th>
                <th scope="col">Conteudo</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var noticia in Model)
            {
                <tr>
                    <th scope="row">@noticia.Titulo</th>
                    <td>@noticia.Conteudo</td>
                    <td>
                        <div class="gap-2 d-flex align-items-center  w-100 justify-content-end">
                            <a class="btn btn-primary" asp-action="EditView" asp-route-id="@noticia.Id">Editar</a>
                            <a class="btn btn-danger" asp-action="DeleteView" asp-route-id="@noticia.Id">Excluir</a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
